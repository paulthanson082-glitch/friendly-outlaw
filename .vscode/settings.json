{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,

  // Swift-specific settings
  "swift.path": "/usr/bin/swift",
  "swift.sourcekit-lsp.serverPath": "/usr/bin/sourcekit-lsp",
  "swift.buildPath": "${workspaceFolder}/.build",
  "swift.autoGenerateLaunchConfigurations": true,

  // File associations
  "files.associations": {
    "*.swift": "swift",
    "Package.swift": "swift"
  },

  // Exclude build artifacts from search
  "files.exclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/xcuserdata": true,
    "**/.DS_Store": true
  },

  // Search settings
  "search.exclude": {
    "**/.build": true,
    "**/.swiftpm": true,
    "**/Package.resolved": true
  },

  // Terminal settings
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontSize": 14,

  // Git settings
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,

  // Settings Sync - Enable for cross-device sync
  "settingsSync.ignoredExtensions": [],
  "settingsSync.ignoredSettings": [],

  // iOS/iPadOS specific optimizations
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-minimal",
  "window.zoomLevel": 0,

  // Code formatting
  "[swift]": {
    "editor.defaultFormatter": "vknabel.vscode-swift-development-environment",
    "editor.formatOnSave": true,
    "editor.tabSize": 4
  }
}
